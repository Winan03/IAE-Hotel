<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app">

    <!-- Título -->
    <TextView
        android:id="@+id/resumen_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Resumen de la Reserva"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tarjeta de Información del Usuario -->
    <LinearLayout
        android:id="@+id/user_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_card_dark"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/resumen_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/user_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información del Usuario"
            android:textColor="@color/golden_metallic"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/resumen_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Usuario: jeffry nacarino"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resumen_dni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DNI: 70832005"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Tarjeta de Información de la Reserva -->
    <LinearLayout
        android:id="@+id/reservation_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_card_dark"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/user_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/reservation_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la Reserva"
            android:textColor="@color/golden_metallic"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/resumen_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Precio: S/15.00"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resumen_duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Duración: Personalizado"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resumen_fechas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Desde: 22-11-2024 18:25\nHasta: 22-11-2024 18:25"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/btn_confirmar_reserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/golden_metallic"
        android:text="CONFIRMAR RESERVA"
        android:textAllCaps="false"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/reservation_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
